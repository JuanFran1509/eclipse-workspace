<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<bean id="spidi" class="entidad.Superheroe" scope="singleton">
		<property name="id" value="01"></property>
		<property name="nombre" value="Peter Parker"></property>
		<property name="nombreSuperheroe" value="Spider-man"></property>
		<property name="poder" value="6000"></property>
		<property name="superpoder" value="Veneno letal"></property>
	</bean>


	<bean id="bat" class="entidad.Superheroe" scope="singleton">
		<property name="id" value="02"></property>
		<property name="nombre" value="Bruce Wayne"></property>
		<property name="nombreSuperheroe" value="Batman"></property>
		<property name="poder" value="600"></property>
		<property name="superpoder" value="Shuriken murcielaguil"></property>
	</bean>

	<bean id="budapest" class="entidad.Superheroe" scope="singleton">
		<property name="id" value="03"></property>
		<property name="nombre" value="Natasha Rumanov"></property>
		<property name="nombreSuperheroe" value="Viuda negra"></property>
		<property name="poder" value="50"></property>
		<property name="superpoder" value="Llave mortal"></property>
	</bean>

	<bean id="superHeroePrototype1" class="entidad.Superheroe"
		scope="prototype">
		<property name="poder" value="100"></property>
	</bean>

	<bean id="superHeroePrototype2" class="entidad.Superheroe"
		scope="prototype">
		<property name="superpoder" value="volar"></property>
	</bean>

	<bean id="listaSuperheroe1" class="java.util.ArrayList"></bean>
	<bean id="listaSuperheroe2" class="java.util.ArrayList"></bean>

</beans>